def containerName="planview"
def tag="latest"
def dockerHubUser="anujsharma1990"
def httpPort="8090"

node {

    stage('Checkout') {
        git changelog: false, poll: false, url: 'https://github.com/anujdevopslearn/SpringBootDocker'
    }

    stage('Build'){
        sh "mvn clean install"
    }

    stage("Image Prune"){
         sh "docker image prune -a -f"
    }

    stage('Image Build'){
        sh "docker build -t $containerName:$tag  -t $containerName --pull --no-cache ."
        echo "Image build complete"
    }

    stage('Push to Docker Registry'){
        withCredentials([usernamePassword(credentialsId: 'dockerHubAccount', usernameVariable: 'dockerUser', passwordVariable: 'dockerPassword')]) {
            sh "docker login -u $dockerUser -p $dockerPassword"
            sh "docker tag $containerName:$tag $dockerUser/$containerName:$tag"
            sh "docker push $dockerUser/$containerName:$tag"
            echo "Image push complete"
        }
		
		withAWS(credentials: 'EKSCreds', region: 'us-east-1') {
			sh """
				aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 529090790225.dkr.ecr.us-east-1.amazonaws.com
				docker tag $containerName:$tag 529090790225.dkr.ecr.us-east-1.amazonaws.com/$containerName:$tag
				docker push 529090790225.dkr.ecr.us-east-1.amazonaws.com/$containerName:$tag
			"""	
		}
    }

	
    stage('Run App'){
        /*sh "docker rm $containerName -f"
        sh "docker pull $dockerHubUser/$containerName"
        sh "docker run -d --rm -p $httpPort:$httpPort --name $containerName $dockerHubUser/$containerName:$tag"
        echo "Application started on port: ${httpPort} (http)"
        */
		withAWS(credentials: 'EKSCreds', region: 'us-east-2') {
			sh "aws sts get-caller-identity"
			sh "aws eks update-kubeconfig --region us-east-2 --name ec2-worker-cluster"
			sh """
			   kubectl get pods
			   kubectl delete deployment kubernetes-bootcamp | true
			   kubectl create deployment kubernetes-bootcamp --image=docker.io/anujsharma1990/$containerName:$tag --port=8090
			   kubectl get pods
			"""
		}
    }

}
